<h1>New gallery</h1>

<% form_for(@gallery) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name, "Gallery Name:" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 50, :rows => 7 %>
  </p>
  <p>
    <%= f.check_box :is_active %> <%= f.label :is_active, "Make Gallery Active?" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>